.welcomeBar
  text-align center
  padding 20px
  margin 0 auto 10px
  background #fff
  display table
  list-style-type none
  width 100%
  min-width 700px
  box-shadow 0 1px 2px rgba(0,0,0,0.1)
  transition background $time*2 ease-in-out, opacity $time*2 ease-in-out
  border-radius 0 0 2*$radius 2*$radius

  .logIn
    width 100%

    p, a
      display inline

  h1
    text-transform uppercase
    margin-bottom 30px

  .action
    textButton()
    color white

  a
    textButton()
    background white
    text-decoration none
    border 1px solid $buttonBlue

.logIn, .loggedIn
  float right
  margin 16px

.loggedIn
  a
    textButton()
    background transparent
    color $blue

    &:hover
      background lighten($buttonBlue,90%)
    &:visited
      background transparent

.logIn
  p
    padding 9px
    margin 0

  a
    textButton()
    background transparent
    color black
    border 1px solid rgba(71,153,252,1)

    &.signInButton
      color white
      background $buttonBlue
      border 1px solid rgba(71,153,252,0.1)

    &:visited
      background transparent

.dashboard
  float left
  width 100%

  .newBook
    position fixed
    bottom .5em
    left 50%
    margin-left -30px
    materialButton()