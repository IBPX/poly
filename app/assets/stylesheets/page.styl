*
  box-sizing border-box
  font-family $sans

html
  width 100%

  body
    width inherit
    margin 0
    display inline-block
    background #eee

a
  color $blue

  &:visited
    background #fafafa
    color lighten($blue, 20%)

  &:active
    color $blue

p.version
  margin 0
  padding 10px 20px
  opacity .3
  float left

.flash_notice, .flash_alert
  z-index 10
  width 100%
  text-align center
  padding 21px

.flash_notice
  background #E9FFE9

.flash_alert
  background #FFE9E9