.dictionary
  .addPhrase
    padding .4em 0
    position fixed
    z-index 10
    left 50%
    transform translateX(-50%)
    bottom 0

    button
      materialButton()
      display block
      margin 0 auto .5em
      font-size 2em
      line-height 1em
      border none
      outline none
      cursor pointer


  .inputMethod
    width 100%
    float left
    background #fafcfc
    box-shadow 0 -1px 2px rgba(0,0,0,0.1)

    label
      float left
      background transparent
      border none
      color $buttonBlue
      font-weight 500
      font-size 1em
      padding 1em

      input
        display block
        float left
        margin 6px 6px 0 0

    button
      float right
      margin 12px
      width 40px
      height 40px
      border-radius 100%
      outline none

      &:hover
        background-color #f5f5f5

    ul
      list-style-type none
      display block
      float right
      margin 0 auto
      padding 0

      li
        float left

        &#text
          button
            padding 0

        &#audio
          button
            padding 3px 0 0 0

        &#video
          button
            padding 3px 0 0 3px

        button
          padding 0
          cursor pointer
          border 1px solid transparent
          background transparent
          border-radius 100%
          width 45px
          height 45px
          margin 10px 5px
          outline none

          &.selected
            box-shadow inset 0 1px 0 #336fb0, inset 0 2px 4px rgba(34,84,137,0.5)
            border-top 1px solid #68abfd !important
            background lighten($buttonBlue, 20%)

          img
            width 25px
            height auto

  .newPhrase
    float left
    width 100%
    border-top 1px solid #f0F3F5
    overflow hidden
    transition height $time ease-in-out margin-top $time ease-in-out margin-bottom $time ease-in-out

    input
      border none
      font-size 1em
      padding 1em 2em
      width auto
      outline none
      height 80px
      width 500px
      float left
      background #FFF

    button.savePhrase
      background transparent
      border none
      color $buttonBlue
      width 100px
      text-align center
      font-weight 400
      padding 16px 0
      margin 10px 0
      border-left 2px solid #eee
      display inline-block
      cursor pointer
      font-size 1em
      outline none

    a.icon.save
      background #fdfdfd
      color $hover
      font-size 0.7em
      width 70px
      border-radius 100%
      height 70px
      float right
      padding .9em 0
      text-align center
      box-shadow 0 2px 0 #eee
      cursor pointer
      font-weight 700
      text-shadow 0 1px darken($hover, 25%)
      line-height .6em
      padding .5em
      font-size 2.3em
      margin 15px

      &:hover
        box-shadow 0 3px 0 #e9e9e9
        background #fff